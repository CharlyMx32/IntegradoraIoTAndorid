<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/bienvenido_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Bienvenido"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="110dp"/>

    <TextView
        android:id="@+id/bienvenido2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Bienvenido2"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bienvenido_text"
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/inicio_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Inicio"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/bienvenido2_text"
        app:layout_constraintTop_toTopOf="@id/bienvenido2_text"
        android:layout_marginTop="95dp"/>

    <TextView
        android:id="@+id/inicio2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Inicio2"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/inicio_text"
        app:layout_constraintTop_toTopOf="@id/inicio_text"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/iniciar_sesion_button"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:text="@string/Iniciar"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/boton_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/inicio2_text"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/registro_home_button"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:text="@string/Registrarse"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/boton_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iniciar_sesion_button"
        android:layout_marginTop="85dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/registro_home_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/registro_home_button"
        android:layout_marginTop="140dp">

        <ImageView
            android:id="@+id/head"
            android:layout_width="510dp"
            android:layout_height="500dp"
            android:background="@drawable/cabeza_animal" />

        <ImageView
            android:id="@+id/ojo_derecho"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/ojo_animal"
            android:rotation="30"/>

        <ImageView
            android:id="@+id/ojo_izquierdo"
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="@id/ojo_derecho"
            android:layout_marginStart="210dp"
            android:layout_alignTop="@id/head"
            android:background="@drawable/ojo_animal"
            android:rotation="-30"/>

        <ImageView
            android:id="@+id/pupila_derecha"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/pupila_animal"
            android:rotation="30"/>

        <ImageView
            android:id="@+id/pupila_izquierda"
            android:layout_width="50dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="@id/pupila_derecha"
            android:layout_marginStart="250dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/pupila_animal"
            android:rotation="-30"/>

        <ImageView
            android:id="@+id/pico"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/pico_animal"/>
    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>