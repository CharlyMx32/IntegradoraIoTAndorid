<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="1.2"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitXY"
        android:layout_marginTop="-20dp"
        app:srcCompat="@drawable/fondo_verde_3" />

    <ImageView
        android:id="@+id/imagen_view3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/circulo_si"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.4" />

    <ImageView
        android:id="@+id/imagen_zigzag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/zigzag_salmon"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/triangulo_salmon"
        app:layout_constraintBottom_toTopOf="@+id/imagen_zigzag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/imagen_view3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2" />

    <ImageView
        android:id="@+id/imagen_view2"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/sikra_sentado"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imagen_zigzag"
        app:layout_constraintHorizontal_bias="0.012"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.476"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/titulo_viewfrag_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frag3_titulo"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/Burple"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/imagen_view2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp" />


    <TextView
        android:id="@+id/descripcion_view2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/frag3_descrp"
        android:textSize="18sp"
        android:textColor="@color/Burple"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/titulo_viewfrag_3"
        app:layout_constraintStart_toStartOf="@id/titulo_viewfrag_3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/siguiente_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Siguiente"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/descripcion_view2"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
